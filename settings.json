{   
    "workbench.startupEditor": "none",
    "editor.minimap.enabled": false,
    "editor.rulers": [120],
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "'cascadia code'",
    "workbench.sideBar.location": "right",
    "window.menuBarVisibility": "toggle",
    "editor.detectIndentation": true,
    "window.title": "${rootName}${separator}${activeEditorLong}",
    "editor.dragAndDrop": false,

    "telemetry.telemetryLevel": "off",

    // Theme colors
    "workbench.colorCustomizations": 
    {
      "[Default Dark+]": 
      {
        "statusBar.background": "#3C3C3C",
        "statusBar.foreground": "#00ffaa",
        "statusBar.debuggingBackground": "#00ffaa",
        "statusBar.debuggingForeground": "#3C3C3C",
        "activityBar.foreground": "#00ffaa",
        "titleBar.activeForeground": "#00ffaa"
      }
    },

    // Vim
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.foldfix": true,

    "vim.leader" : "<space>",

    "vim.normalModeKeyBindings": [
        // Colon to open the command palette
        {
            "before" : ["\""],
            "commands" : [
                "workbench.action.showCommands"
            ]
        },
        // Hotkey to open find and replace.
        {
            "before" : ["<leader>", "f"],
            "commands" : [
                "editor.action.startFindReplaceAction"
            ]
        },
        // Save with leader w.
        {
            "before" : ["<leader>", "w"],
            "commands" : [
                "workbench.action.files.save"
            ]
        },
        // Run default build task with leader b.
        {
            "before" : ["<leader>", "b"],
            "commands" : [
                "cmake.build"
            ]
        },
        // Open tasks prompt with leader t.
        {
            "before" : ["<leader>", "t"],
            "commands" : [
                "cmake.buildWithTarget"
            ]
        },
        // Toggle zen mode with leader z.
        {
            "before" : ["<leader>", "z"],
            "commands" : [
                "workbench.action.toggleZenMode"
            ]
        },
        // Toggle zen mode with leader z.
        {
            "before" : ["z", "a"],
            "commands" : [
                "editor.toggleFold"
            ]
        },
    ],

    "vim.visualModeKeyBindings": [
        // Format selection with leader f.
        {
            "before" : ["<leader>", "f"],
            "commands" : [
                "editor.action.formatSelection"
            ]
        },
        // Colon to open the command palette
        {
            "before" : ["\""],
            "commands" : [
                "workbench.action.showCommands"
            ]
        },
    ],

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "cmake.configureOnOpen": true,
    "cmake.configureOnEdit": false,
    "cSpell.enableFiletypes": [
        "cmake"
    ],

    "better-comments.tags": [
        {
          "tag": "warn",
          "color": "#FF2D00",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "note",
          "color": "#fcdf02",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "//",
          "color": "#474747",
          "strikethrough": true,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "todo",
          "color": "#FF8C00",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        },
        {
          "tag": "*",
          "color": "#98C379",
          "strikethrough": false,
          "underline": false,
          "backgroundColor": "transparent",
          "bold": false,
          "italic": false
        }
      ],
      "better-comments.highlightPlainText": true,
      "cSpell.allowCompoundWords": true,
      "diffEditor.ignoreTrimWhitespace": false,
      "cortex-debug.enableTelemetry": false,
      "debug.showInStatusBar": "always",
      "git.suggestSmartCommit": false,
      "git.showCommitInput": false,
      "cSpell.diagnosticLevel": "Hint",
      "debug.console.closeOnEnd": true,
      "debug.terminal.clearBeforeReusing": true,
      "git.confirmSync": false,
    "cmake.buildDirectory": "${workspaceFolder}/Build",
    "timeline.excludeSources": [],
    "editor.codeLens": false,
}